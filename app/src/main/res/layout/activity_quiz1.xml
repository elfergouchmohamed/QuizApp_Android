<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Chose the right answer!"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/chat_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="9dp"
            android:paddingBottom="10dp"
            app:srcCompat="@drawable/chat" />

        <Button
            android:id="@+id/btn1_q1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:padding="15dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Tigre"
            app:backgroundTint="#5B995A"/>

        <Button
            android:id="@+id/btn2_q1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:padding="15dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Moustique"
            app:backgroundTint="#5B995A"/>

        <Button
            android:id="@+id/btn3_q1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:padding="15dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Chat"
            app:backgroundTint="#5B995A"/>

        <Button
            android:id="@+id/btn4_q1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:padding="15dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Ane"
            app:backgroundTint="#5B995A"/>

        <Button
            android:id="@+id/btn5_nxt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="30dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="Next"
            app:backgroundTint="#8a8a8a"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>